.container.has-text-centered
  .columns
    .column.is-4.is-offset-4
      %h3.title.has-text-grey= @page_title
      .box
        %form{method: :post}
          = rodauth.csrf_tag(rodauth.reset_password_request_path)
          %p= rodauth.reset_password_explanatory_text
          .field
            .control
              = rodauth.input_field_string(rodauth.login_param, "login", type: rodauth.login_input_type, class: "input is-large", autocomplete: rodauth.login_field_autocomplete_value, attr: "placeholder='email@example.com'", value: rodauth.param_or_nil(rodauth.login_param))
          = rodauth.button(rodauth.reset_password_request_button, class: "button is-block is-info is-large is-fullwidth")
      = render "login-form-footer"
