.container.has-text-centered
  .columns
    .column.is-4.is-offset-4
      %h3.title.has-text-grey= @page_title
      .box
        %form{method: :post}
          = rodauth.csrf_tag
          .field
            .control
              = rodauth.input_field_string(rodauth.login_param, "login", type: rodauth.login_input_type, class: "input is-large", autocomplete: rodauth.login_field_autocomplete_value, attr: "placeholder='email@example.com'")
          .field
            .control
              = rodauth.input_field_string(rodauth.password_param, "password", type: "password", class: "input is-large", autocomplete: rodauth.password_field_autocomplete_value, attr: "placeholder='#{rodauth.password_label}'")
          .field
            .control
              = rodauth.input_field_string(rodauth.password_confirm_param, "password-confirm", type: "password", class: "input is-large", autocomplete: "new-password", attr: "placeholder='#{rodauth.password_confirm_label}'")
          .field
            .control
              = rodauth.input_field_string("birth_date", "birth_date", type: "date", class: "input is-large")
            %p.help= I18n.t("create_account.birth_date_help")
          = rodauth.button(rodauth.create_account_button, class: "button is-block is-info is-large is-fullwidth")
      = render "login-form-footer"
